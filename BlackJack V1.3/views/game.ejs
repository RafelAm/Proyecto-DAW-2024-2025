    let apuestaDiv = "";
    if (
        jugador.tipo === "Player" &&
        !gameState.state.reiniciando && // Si estÃ¡ reiniciando, NO entra aquÃ­
        jugador.fichasApostadas &&
        jugador.fichasApostadas.length > 0
    ) {
        const desglose = Object.entries(
            jugador.fichasApostadas.reduce((acc, f) => {
